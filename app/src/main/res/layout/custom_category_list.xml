<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/re_custom_list">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_custom_list"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"

        >

        <ImageView
            android:id="@+id/img_custom_list_category"
            android:layout_width="40dp"
            android:layout_height="40dp">

        </ImageView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_custom_list"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cd_custom_list"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"></TextView>

</RelativeLayout>