<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#7EC2F8">


   <Button
       android:id="@+id/btn_addcard"
       android:layout_width="160dp"
       android:layout_height="100dp"
       android:layout_centerHorizontal="true"
       android:layout_toRightOf="@+id/sh_card_counter"
       android:background="@drawable/custom_button_add_note"
       android:onClick="addCardClick"
       android:text="Add Card"
       android:textColor="#FFFFFF"
       android:textSize="20sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.936"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.483">

   </Button>

   <Button
       android:id="@+id/sh_card_counter"
       android:layout_width="101dp"
       android:layout_height="82dp"
       android:layout_alignParentLeft="true"
       android:layout_centerHorizontal="true"
       android:background="@drawable/custom_button_card_count"
       android:text="0"
       android:textColor="#FFFFFF"
       android:textSize="25sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.529"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.186">

   </Button>

   <Button
       android:id="@+id/btn_add_note"
       android:layout_width="160dp"
       android:layout_height="100dp"
       android:layout_below="@+id/btn_addcard"
       android:layout_centerHorizontal="true"
       android:layout_toRightOf="@+id/sh_card_counter"
       android:background="@drawable/custom_button_add_note"
       android:onClick="addCardClick"
       android:text="Add Note"
       android:textColor="#FFFFFF"
       android:textSize="20sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.063"
       app:layout_constraintStart_toStartOf="parent"
       tools:layout_editor_absoluteY="305dp"
       tools:ignore="MissingConstraints">

   </Button>

   <Button
       android:id="@+id/btn_review"
       android:layout_width="102dp"
       android:layout_height="106dp"
       android:layout_centerInParent="true"
       android:background="@drawable/custom_button_review"
       android:onClick="addCardClick"
       android:text="review cards"
       android:textColor="#FFFFFF"
       android:textSize="20sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.051"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.974">

   </Button>

   <Button
       android:onClick="ds"
       android:id="@+id/button3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Button"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.547"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/sh_card_counter"
       app:layout_constraintVertical_bias="0.572" />


</androidx.constraintlayout.widget.ConstraintLayout>