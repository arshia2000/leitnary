<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_category_im"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">



    <ImageView
        android:id="@+id/im_category_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        ></ImageView>

    </androidx.cardview.widget.CardView>




    <EditText
        android:id="@+id/tv_category"
        android:layout_width="300dp"
       android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_category_im"
        android:layout_marginTop="20dp"
android:layout_centerHorizontal="true"
        android:hint="   your category name"></EditText>




    <com.madrapps.pikolo.RGBColorPicker
        android:id="@+id/rgb_category"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/tv_category"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        ></com.madrapps.pikolo.RGBColorPicker>

    <Button
        android:id="@+id/btn_accept_category"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:text="Add"
       android:layout_marginLeft="60dp"
        android:textSize="18sp"
        android:layout_below="@id/rgb_category"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_button_add_note"></Button>

    <Button
        android:id="@+id/btn_alert_cancel"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button_review"
        android:textSize="18sp"
        android:layout_toRightOf="@id/btn_accept_category"
        android:layout_below="@id/rgb_category"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="cancel"></Button>

    </RelativeLayout>


</ScrollView>